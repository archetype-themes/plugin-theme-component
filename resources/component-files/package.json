{
  "name": "${packageName}",
  "version": "1.0.0",
  "description": "${collectionName}'s ${componentName} ${componentType}",
  "license": "${license}",
  "author": "${author}",
  "main": "${componentName}.liquid",
  "repository": {
    "type": "git",
    "url": "${gitUrl}",
    "directory": "${componentFolder}"
  },
  "dependencies": {
    "${collectionScope}/scripts": "*",
    "${collectionScope}/styles": "*"
  },
  "devDependencies": {
    "standard": "*"
  },
  "component": {
    "type": "${componentType}"
  },
  "standard": {
    "ignore": [
      "build/**"
    ]
  }
}
