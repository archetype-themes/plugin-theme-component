{
  "author": "Archetype Themes Limited Partnership",
  "description": "Archetype Theme's Shopify CLI theme component plugin",
  "license": "MIT",
  "exports": {
    ".": {
      "default": "./src/bin/component.js"
    }
  },
  "name": "@archetype-themes/plugin-theme-component",
  "type": "module",
  "version": "3.2.1",
  "bin": {
    "component": "bin/run.js"
  },
  "scripts": {
    "cdc": "dpdm --no-warning --no-tree --exit-code circular:1 bin/run.js",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "prepack": "oclif manifest && oclif readme",
    "prepare": "husky",
    "pretest": "npm ci && npm run lint && npm run cdc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm publish --dry-run && echo '\nTest Run completed succesfully'",
    "test": "NODE_ENV=test mocha --forbid-only -p false \"test/**/*.test.js\"",
    "version": "oclif readme && git add README.md"
  },
  "files": [
    "/bin",
    "/src",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archetype-themes/plugin-theme-component.git"
  },
  "dependencies": {
    "@iarna/toml": "2.2.5",
    "@oclif/core": "3.26.0",
    "@shopify/browserslist-config": "^3.0.0",
    "@shopify/cli-kit": "3.58.2",
    "@types/node": "20.12.4",
    "chokidar": "^3.6.0",
    "deepmerge": "^4.3.1",
    "es-module-lexer": "^1.4.2",
    "fast-glob": "^3.3.2",
    "jsdom": "^24.0.0",
    "lodash-es": "^4.17.21",
    "parse-gitignore": "^2.0.0",
    "picomatch": "^4.0.2",
    "postcss": "^8.4.36",
    "postcss-import": "^16.0.1",
    "postcss-preset-env": "^9.5.4",
    "svgo": "^3.2.0"
  },
  "devDependencies": {
    "@oclif/test": "^3.2.1",
    "dotenv": "^16.4.5",
    "dpdm": "^3.14.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "mocha": "^10.3.0",
    "oclif": "4.7.6",
    "prettier": "3.2.5",
    "shx": "^0.3.4"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "engine-strict": true,
  "oclif": {
    "commands": "src/commands",
    "bin": "shopify",
    "topicSeparator": " "
  }
}
