{
  "author": "Archetype Themes Limited Partnership",
  "description": "Archetype Theme's Shopify CLI theme component plugin",
  "license": "MIT",
  "exports": {
    ".": {
      "default": "./src/bin/component.js"
    }
  },
  "name": "plugin-theme-component",
  "type": "module",
  "version": "3.0.0",
  "bin": {
    "component": "bin/run.js"
  },
  "scripts": {
    "cdc": "dpdm --no-warning --no-tree --exit-code circular:1 bin/run.js",
    "lint": "standard",
    "prepack": "oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "pretest": "npm ci && npm run lint && npm run cdc",
    "test": "NODE_ENV=test mocha --forbid-only -p false \"test/**/*.test.js\"",
    "posttest": "npm publish --dry-run && echo '\nTest Run completed succesfully'",
    "version": "oclif readme && git add README.md"
  },
  "files": [
    "/bin",
    "/src",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "@archetype-themes:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/archetype-themes/plugin-theme-component.git"
  },
  "dependencies": {
    "@iarna/toml": "2.2.5",
    "@oclif/core": "3.15.1",
    "@shopify/browserslist-config": "^3.0.0",
    "@shopify/cli-kit": "3.56.0",
    "@types/node": "18.19.3",
    "chokidar": "^3.6.0",
    "deepmerge": "^4.3.1",
    "es-module-lexer": "^1.4.1",
    "fast-glob": "^3.3.2",
    "jsdom": "^24.0.0",
    "lodash-es": "^4.17.21",
    "parse-gitignore": "^2.0.0",
    "picomatch": "^3.0.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-preset-env": "^9.4.0",
    "svgo": "^3.2.0"
  },
  "devDependencies": {
    "@oclif/test": "^3.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "dotenv": "^16.4.5",
    "dpdm": "^3.14.0",
    "mocha": "^10.3.0",
    "oclif": "4.0.2",
    "shx": "^0.3.4",
    "standard": "latest",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "engine-strict": true,
  "standard": {
    "ignore": [
      "resources/**"
    ]
  },
  "oclif": {
    "commands": "src/commands",
    "bin": "shopify",
    "topicSeparator": " "
  }
}
